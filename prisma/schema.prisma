generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model assistants {
  id        Int       @id @default(autoincrement())
  name      String    @db.VarChar(255)
  model     Json?
  voice     Json?
  identity  String?   @db.VarChar(255)
  style     String?
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt DateTime  @default(now()) @db.Timestamptz(6)
  deletedAt DateTime? @db.Timestamptz(6)
  tasks     tasks[]
}

model users {
  id        Int       @id @default(autoincrement())
  email     String    @db.VarChar(255)
  name      String?   @db.VarChar(255)
  username  String?   @db.VarChar(255)
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt DateTime  @default(now()) @db.Timestamptz(6)
  deletedAt DateTime? @db.Timestamptz(6)
}

model tasks {
  id           Int         @id @default(autoincrement())
  name         String
  instructions String
  assistantId  Int?
  status       String      @default("draft")
  createdAt    DateTime    @default(now()) @db.Timestamptz(6)
  updatedAt    DateTime    @default(now()) @db.Timestamptz(6)
  deletedAt    DateTime?   @db.Timestamptz(6)
  type         String?
  scheduledAt  DateTime?   @db.Timestamptz(6)
  calls        calls[]
  assistants   assistants? @relation(fields: [assistantId], references: [id], onUpdate: NoAction)
}

model calls {
  id           Int       @id @default(autoincrement())
  taskId       Int?
  status       String?
  vapiId       String?
  summary      String?
  transcript   String?
  startedAt    DateTime? @db.Timestamptz(6)
  endedAt      DateTime? @db.Timestamptz(6)
  createdAt    DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt    DateTime  @default(now()) @db.Timestamptz(6)
  deletedAt    DateTime? @db.Timestamptz(6)
  recordingUrl String?
  tasks        tasks?    @relation(fields: [taskId], references: [id], onUpdate: NoAction)
}
